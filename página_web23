<section class="resume-section p-3 p-lg-5 d-flex align-items-center" id="visor">
  <div class="w-100">
      <h2 class="mb-5">Visor Web sencillo</h2>

        <h3> Lugares de Interés Geológico en España (límites Aragón) </h3>
<p> Mapa de España con los distintos lugares de interés Geológico (LIC), atendiendo al organismo que lo a inventariado y a su ubicación.
  Se añaden una serie de capas base para poder variar la visualización, así como el límite provincial de Aragón.
      <div id="bloque_mapa" style="width: 800px; height: 800px;"></div>
      <style type="text/css" title="estilo personal">
       html body,#mapa {width: 1000px; height: 400px;} </style>
      <script>
      //aqui se ha definido el bloque del mapa y el espacio que ocupará, así como el estilo.
      // definimos el mapa como una varianble y le ajustamos dónde lo queremos ver
          var mi_mapa = L.map('bloque_mapa').setView([40, -1],5);

      // añadimos mapa de fondo
          L.tileLayer(
          // dirección de las tiles
          'https://api.tiles.mapbox.com/v4/{id}/{z}/{x}/{y}.png?access_token=pk.eyJ1IjoibWFwYm94IiwiYSI6ImNpejY4NXVycTA2emYycXBndHRqcmZ3N3gifQ.rJcFIG214AriISLbB6B5aw',
         // propiedades
         { maxZoom: 10,  // zoom máximo 10
          // Líneas de atribución
              attribution: 'Map data &copy; <a href="https://www.openstreetmap.org/">OpenStreetMap</a> contributors, ' + '<a href="https://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>',
              id: 'mapbox.streets'

              //Marcador
           }).addTo(mi_mapa)

        //y otro tile
         var Esri_NatGeoWorldMap = L.tileLayer('https://server.arcgisonline.com/ArcGIS/rest/services/NatGeo_World_Map/MapServer/tile/{z}/{y}/{x}', {

       	maxZoom: 16
       });
        Esri_NatGeoWorldMap.addTo(mi_mapa);
//Se agrega el servicion de ArcGIS online para visualizar la capa NatGeo, especificando el zoom máximo.

      //AÑADIMOS EL PNOA
      var PNOA = L.tileLayer.wms('http://www.idee.es/wms/PNOA/PNOA?', {  //URL WMS
           layers: 'PNOA',          // capa del WMS
           format: 'image/png',     // tipo de formato
           transparent: true,       // activa capa alfa/transparente
           });
       PNOA.addTo(mi_mapa);         // añadir capa al mapa
       // Añadimos servicio WMS (Lugares de Interés Geológico)
       var geo = L.tileLayer.wms("http://mapas.igme.es/gis/services/Cartografia_Tematica/IGME_LIGs2013/MapServer/WMSServer",
       {layers:"1", //variable con servicio wms, en el que se indica el formato, la trasparencia, la versión y los agradecimientos.
        format:'image/png',
        transparent: true,
        version: '1.3.0',
       attribution:"IGME"});
       geo.addTo(mi_mapa);
       //AÑADIENDO CONTROLES
       var baseMaps = {                  // variable con apartado de mapas base
          "OpenStreetMap": Esri_NatGeoWorldMap,  // elemento a incluir y descripción

          };
      var overlayMaps = {              // apartado de capas
          "Ortotfoto PNOA": PNOA,
          "Puntos de Interés Geológico": geo       // elemento a incluir y descripción
          };
      var capas = L.control.layers(   // variable con control de capas
        baseMaps,                     // añadiendo capas base
        overlayMaps,                  // añadiendo capas
        {collapsed:true});            // control NO desplegado
      capas.addTo(mi_mapa);           // añadimos control de capas al mapa

      //añadiendo escala
      var escala = L.control.scale({ maxWidth:150, metric:false})
       escala.addTo(mi_mapa);

       // añadir capa GeoJSON
       var provincias = L.geoJSON( // crear objeto provincias como capa geojson
         araprov, {             // código a cargar: `provincias`
         color: 'black',             // estilo color
         fillColor: 'blue',        //        color de relleno
         fillOpacity: 0,         //        opacidad de relleno
         });

       provincias.addTo(mi_mapa)    //AÑADIENDO GEOJSON


        </script>


      <div #mapa id="bloque_mapa"></div>
    </div>
 </section>

